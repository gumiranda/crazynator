import { render, screen } from '@testing-library/react';
import { describe, it, expect } from 'vitest';
import {{pascalCase name}} from '../{{kebabCase name}}';

describe('{{pascalCase name}}', () => {
  it('renders correctly', () => {
    render(<{{pascalCase name}}>Test content</{{pascalCase name}}>);
    expect(screen.getByText('Test content')).toBeInTheDocument();
  });

  it('applies custom className', () => {
    const { container } = render(
      <{{pascalCase name}} className="custom-class">Test</{{pascalCase name}}>
    );
    expect(container.firstChild).toHaveClass('custom-class');
  });

  it('passes through additional props', () => {
    render(
      <{{pascalCase name}} data-testid="{{kebabCase name}}-test">
        Test content
      </{{pascalCase name}}>
    );
    expect(screen.getByTestId('{{kebabCase name}}-test')).toBeInTheDocument();
  });
});